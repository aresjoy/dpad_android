<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dpad_item_layout"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/dpad_bg"
    android:minHeight="72dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dpad_item_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:src="#edeef2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/dpad_item_confirm_layout"
        android:gravity="center_vertical|left"
        android:minHeight="72dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dpad_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="-"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dpad_item_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="-"
            android:textColor="#c6c6c6"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dpad_item_confirm_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dpad_item_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="@string/dpad_confirm"
            android:textColor="#059ce6"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/dpad_item_switch"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:src="@drawable/dpad_switch" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="72dp"
        android:background="#eaeaea"

        />
</RelativeLayout>