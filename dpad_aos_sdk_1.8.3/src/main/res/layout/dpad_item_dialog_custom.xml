<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:paddingBottom="16dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/dpad_dialog_cancle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dpad_ic_cancle"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:tint="#059ce6"
            />
        <TextView
            android:layout_below="@+id/dpad_dialog_cancle"
            android:id="@+id/dpad_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:text="-"
            android:textColor="#222222"
            />


    </RelativeLayout>

    <TextView
        android:id="@+id/dpad_dialog_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#059ce6"
        android:textSize="20sp"
        android:text="확인"
        android:gravity="center"
        android:textColor="@android:color/white"
        />
</LinearLayout>