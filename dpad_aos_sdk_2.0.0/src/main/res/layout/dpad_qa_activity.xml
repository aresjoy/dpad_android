<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dpad_title_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dpad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="문의하기"
            android:textColor="@color/dp_title"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/dpad_cancle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/dpad_ic_cancle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b5b5b5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eceff1"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="광고에 참여했는데 보상을 받지 못하셨나요? 다음사항인 경우에 보상이 지급되지 않습니다."
                    android:textColor="#444444"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="1.이 곳에서 참여하기 전에, 다른 곳에서 참여한 경우\n\n2.보상 지급을 위한 과제를 끝까지 수행하지 않은 경우"
                    android:textColor="#222222"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dpad_qa_history"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/dpad_bg_round_blue_default"
                    android:gravity="center"
                    android:text="적립이력 보기"
                    android:textColor="#059ce6"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="최초로 참여한 광고이고,보상 지급 조건을 모두 충족했는데도 보상금이 지급되지 않은 경우라면,아래 내용을 채우서 문의해 주세요.영업일 기준 2일 이내에,전화 통화가 반드시 필요한 경우가 아니면,이메일로 회신 드립니다."
                    android:textColor="#444444"
                    android:textSize="12dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="광고명"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/dpad_qa_servicename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="72dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="문의하실 광고명을 선택하세요"
                    android:textColor="#222222"
                    android:textColorHint="#bbbbbb"
                    android:textSize="14sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_spinner" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e4e4e4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="고객명"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/dpad_qa_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="72dp"
                    android:background="@null"
                    android:hint="이름을 입력해주세요"
                    android:lines="1"
                    android:textColor="#222222"
                    android:textColorHint="#bbbbbb"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e4e4e4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="이메일"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/dpad_qa_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="72dp"
                    android:background="@null"
                    android:hint="이메일을 입력해주세요"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:textColor="#222222"
                    android:textColorHint="#bbbbbb"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e4e4e4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="휴대폰번호"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/dpad_qa_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="72dp"
                    android:background="@null"
                    android:hint="휴대폰 번호를 입력해주세요"
                    android:inputType="phone"
                    android:lines="1"
                    android:textColor="#222222"
                    android:textColorHint="#bbbbbb"
                    android:textSize="14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:background="#e4e4e4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="문의할 광고 제목"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/dpad_qa_adtitle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:hint="문의할 광고 제목을 입력해주세요"
                    android:lines="1"
                    android:textColor="#222222"
                    android:textColorHint="#bbbbbb"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e4e4e4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="문의 내용"
                    android:textColor="#222222"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/dpad_qa_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background="@drawable/dpad_bg_edit"
                    android:hint="내용을 입력해주세요"
                    android:text="해당 정보를  포함하여 문의 주세요.\n
   1.광고시청 완료 일자,시간:\n
   2.광고 참여시 입력한 정보:\n
   3.설명:\n
"
                    android:minHeight="48dp"
                    android:textColor="#222222"
                    android:textColorHint="#bbbbbb"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#e4e4e4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp">

                <CheckBox
                    android:id="@+id/dpad_qa_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#059ce6"
                    android:checked="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/dpad_qa_check"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="문의 및 답변을 위해 개인정보수집에 동의합니다."
                        android:textColor="#222222"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="수집항목:고객명,이메일,휴대폰번호\n수집기간:문의내용 관련 조치후 즉시 페기"
                        android:textColor="#979797"
                        android:textSize="12sp" />
                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:id="@+id/dpad_qa_confirm"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/dpad_bg_round_blue_press"
                android:gravity="center"
                android:text="문의하기 접수"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>